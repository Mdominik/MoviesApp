<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="false"
    android:focusable="false"

    android:padding="6dp">

    <TextView
        android:id="@+id/tv_reviewContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/marginPaddingMedium"

        android:layout_marginTop="@dimen/marginPaddingMedium"

        android:layout_marginRight="@dimen/marginPaddingMedium"
        android:fontFamily="@font/roboto_light"
        android:gravity="center"
        android:justificationMode="inter_word"
        android:text="COntent review"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_reviewID" />

    <TextView
        android:id="@+id/tv_reviewAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginPaddingLittle"
        android:fontFamily="@font/roboto_light"
        android:gravity="center"
        android:inputType="textMultiLine"
        android:text="~ author"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/tv_reviewContent"
        app:layout_constraintTop_toBottomOf="@+id/tv_reviewContent" />

    <TextView
        android:id="@+id/tv_reviewID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="@dimen/marginPaddingMedium"
        android:fontFamily="@font/roboto_light"
        android:gravity="center"
        android:inputType="textMultiLine"
        android:text="Review #1"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/tv_reviewContent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>